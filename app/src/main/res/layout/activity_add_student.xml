<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <include
        android:id="@+id/toolbarStudent"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/identificateur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/toolbarStudent"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/id"
        android:drawablePadding="10dp"
        android:hint="identificateur"
        android:inputType="number"
        android:padding="10dp"
        android:drawableLeft="@drawable/id" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/identificateur"
        android:layout_margin="5dp"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/id"
        android:drawablePadding="10dp"
        android:hint="nom"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/prenom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nom"
        android:layout_margin="5dp"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/id"
        android:drawablePadding="10dp"
        android:hint="prénom"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/prenom"
        android:layout_margin="5dp"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="10dp"
        android:hint="mail"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/tel1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/mail"
        android:layout_margin="5dp"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="numéro du teliphone"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/tel2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tel1"
        android:layout_margin="5dp"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="numéro du teliphone"
        android:inputType="number"
        android:padding="10dp" />

    <TextView
        android:id="@+id/barcodeview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tel2"
        android:layout_margin="5dp"
        android:background="@drawable/blanks"
        android:drawableStart="@drawable/qr_code"
        android:inputType="textPersonName"
        android:hint="QR Code Number"
        android:drawablePadding="10dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/buttonscan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/barcodeview"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="-70dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Code QR"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="211dp" />

    <Button
        android:id="@+id/addstudentbuttontodatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonscan"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="-70dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ajouter"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="211dp" />


</RelativeLayout>