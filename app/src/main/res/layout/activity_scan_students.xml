<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scanStudentsActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <android.support.v7.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/yellow"
        android:id="@+id/toolbar"
        android:padding="10dp"

        tools:ignore="MissingConstraints"
        android:layout_marginBottom="70dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/ic_baseline_arrow_back_ios_24back"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="chercher un etudiant"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:id="@+id/imageButtonsearch"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="315dp"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"
        tools:ignore="VectorDrawableCompat" />


    <EditText
        android:id="@+id/searchfield"
        android:layout_width="289dp"
        android:layout_height="35dp"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="-38dp"
        android:background="@drawable/gradient"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:ems="10"
        android:hint="codde Qr"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#F7F2F2"
        android:textSize="16dp" />

    <Button
        android:id="@+id/searchbtnn"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="150dp"
        android:text="chercher"
        android:textColor="#F7F2F2" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViews"
        android:layout_marginTop="40dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>