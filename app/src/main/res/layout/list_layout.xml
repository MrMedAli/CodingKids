<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:background="@color/cardview_shadow_end_color">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yellow"
    android:padding="5dp"
    >
    <TextView
        android:id="@+id/viewstudentqrcodename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:text="code qr               " />


    <TextView
        android:id="@+id/viewstudentqrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:textColor="#00BCD4"
        android:layout_marginLeft="50dp"
        android:layout_toEndOf="@+id/viewstudentqrcodename"
        android:text="TextView" />

    <TextView
        android:id="@+id/viewstudentidname"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:text="identificateur" />


    <TextView
        android:id="@+id/viewstudentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/viewstudentidname"
        android:text="TextView"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/viewstudentlastnamename"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:text="Prenom           " />

    <TextView
        android:id="@+id/viewstudentlastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/viewstudentlastnamename"
        android:text="TextView"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/viewstudentnamename"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#00BCD4"
        android:text="Nom                      " />

    <TextView
        android:id="@+id/viewstudentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:textColor="#00BCD4"
        android:layout_toEndOf="@+id/viewstudentnamename"
        android:text="TextView" />


</RelativeLayout>
</android.support.v7.widget.CardView>